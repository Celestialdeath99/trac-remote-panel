<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.celestialdata.panel.fxcontrollers.EmergencyShutoffDisabled">
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label text="Emergency Shutoff Disabled" textFill="#d32323">
                    <font>
                        <Font name="Berlin Sans FB" size="48.0" />
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets left="75.0" right="75.0" top="75.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label maxWidth="500.0" text="The waterpark's Emergency Shutoff cannot be used if there are not any water features turned on. If you understand, please click the button below to return to the control interface." textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Berlin Sans FB" size="24.0" />
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="25.0" top="25.0" />
            </BorderPane.margin>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <JFXButton fx:id="understandButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onUnderstandButton" ripplerFill="#407f40" style="-fx-background-color: #5cb85c;" text="Take Me Back">
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="36.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
            </children>
            <BorderPane.margin>
                <Insets bottom="75.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
