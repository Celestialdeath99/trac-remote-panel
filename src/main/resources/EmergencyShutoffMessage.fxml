<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.celestialdata.panel.fxcontrollers.EmergencyShutoffMessage">
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label text="Emergency Shutoff Activated" textFill="#d32323">
                    <font>
                        <Font name="Berlin Sans FB" size="48.0" />
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets left="75.0" right="75.0" top="75.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label maxWidth="500.0" text="The waterpark was shutdown using the emergency shutoff. When you are ready to restart the waterpark, press the button below and the features that were on before the shutdown will be be turned back on." textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Berlin Sans FB" size="24.0" />
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="25.0" top="25.0" />
            </BorderPane.margin>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <JFXButton fx:id="restartParkButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onRestartParkButton" ripplerFill="#407f40" style="-fx-background-color: #5cb85c;" text="Restart Waterpark">
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="36.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
            </children>
            <BorderPane.margin>
                <Insets bottom="75.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
